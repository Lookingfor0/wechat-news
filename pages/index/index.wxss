.navbar {
  display: flex;
  flex: auto;
  height: 50rpx;
  justify-content: space-around;
  align-content: center;
  align-items: center;
  background-color: #36a5e7;
  padding-bottom: 10rpx;
}

.navbar-item {
  color: #cee7f7;
  font-size: 28rpx;
  line-height: 50rpx;
  position: relative;
}

.active {
  color: #ffffff;  
}

.active::after {
  position: absolute;
  bottom: 0;
  left: 11rpx;
  display: block;
  width: 28rpx;
  height: 5rpx;
  background-color: #a0ceed;
  content: "";
}